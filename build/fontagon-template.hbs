// Overrideable helper to finding the fonts
fontagon-font-path ?= '~assets/fonts/fontagon/dist'

// Load the font
@font-face
	font-family 'fontagon'
	src url(fontagon-font-path + '/fontagon.woff2') format('woff2'), url(fontagon-font-path + '/fontagon.woff') format('woff')
	font-weight normal
	font-style normal
	font-display block

fontagon-base-styles()
	font-family '{{fontName}}' !important
	speak never
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1

	/* Support for all WebKit browsers. */
	-webkit-font-smoothing antialiased
	/* Support for Safari and Chrome. */
	text-rendering optimizeLegibility

	/* Support for Firefox. */
	-moz-osx-font-smoothing grayscale

	/* Support for IE. */
	font-feature-settings 'liga'

// Make icon class
[class^="{{classPrefix}}-"], [class*=" {{classPrefix}}-"]
	&:before
		fontagon-base-styles()

// Font classes

{{#each codepoints}}
.{{../classPrefix}}-{{@key}}
	&:before
		content "\\{{this}}"
{{/each}}
